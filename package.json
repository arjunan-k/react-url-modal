  "size-limit": [
    {
      "path": "dist/react-url-modal.cjs.production.min.js",
      "limit": "1.3 KB"
    },
    {
      "path": "dist/react-url-modal.esm.js",
      "limit": "1.45 KB"
    },
    {
      "path": "dist/Modal/index.js",
